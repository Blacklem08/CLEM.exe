<Window x:Class="CLEM_exe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CLEM_exe"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="YesButton" Content="YES" Height="80" Margin="58,289,0,0" Width="140" Background="Black" Foreground="#FF00FF1A" BorderBrush="Black" HorizontalAlignment="Left" VerticalAlignment="Top" IsDefault="True" Click="YesButton_Click"/>
        <Button x:Name="NoButton" Content="NO" Height="80" Margin="600,284,0,0" Width="140" Background="Black" Foreground="#FF00FF1A" BorderBrush="Black" HorizontalAlignment="Left" VerticalAlignment="Top" IsCancel="True" Click="NoButton_Click"/>
        <TextBlock x:Name="QuestionBlock" Margin="0,153,0,0" TextWrapping="Wrap" Text="Wanna be my friend ?" VerticalAlignment="Top" FontSize="48" HorizontalAlignment="Center"/>

    </Grid>
</Window>
